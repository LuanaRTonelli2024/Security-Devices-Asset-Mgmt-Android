<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".CameraDetailActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_background"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/camera_informations"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/name"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/camera_name"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/location"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/camera_location"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewIPAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/ip_address"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_ipaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_ipaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/ip_address"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewSubnetMask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/subnet_mask"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_subnetmask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_subnetmask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/subnet_mask"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewDefaultGateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/default_gateway"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_defaultgateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_defaultgateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/default_gateway"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/username"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:hint="@string/camera_username"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/password"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tv_vis_camera_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_edit_camera_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/camera_password"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:backgroundTint="#2196F3"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_qrCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="#2196F3"
                android:text="@string/qr_code"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="#FFEB3B"
                android:text="@string/edit"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:backgroundTint="#CE0F50"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>