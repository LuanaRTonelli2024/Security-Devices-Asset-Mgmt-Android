<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="#233ABA" />

    <!-- Cantos arredondados -->
    <corners android:radius="12dp" />

    <!-- Borda opcional -->
    <stroke
        android:width="1dp"
        android:color="#1E2A78" />

    <!-- Padding interno -->
    <padding
        android:top="12dp"
        android:bottom="12dp"
        android:left="16dp"
        android:right="16dp" />
</shape>
