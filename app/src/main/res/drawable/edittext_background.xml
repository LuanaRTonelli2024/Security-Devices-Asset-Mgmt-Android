<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo branco -->
    <solid android:color="@android:color/white" />

    <!-- Cantos arredondados -->
    <corners android:radius="8dp" />

    <!-- Borda suave -->
    <stroke
        android:width="1dp"
        android:color="#D1D5DB" />

    <!-- Padding interno -->
    <padding
        android:top="8dp"
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp" />
</shape>